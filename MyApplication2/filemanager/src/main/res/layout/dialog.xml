<?xml version="1.0" encoding="utf-8"?>
<com.grt.filemanager.view.dialog.DialogLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_btn_click_select"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_four_dp"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:visibility="gone">

        <!--icon-->
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/thirty_two_dp"
            android:layout_height="@dimen/thirty_two_dp"
            android:layout_marginEnd="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:src="@drawable/ic_launcher"
            android:visibility="gone" />

        <!-- title -->

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/icon"
            android:layout_toRightOf="@+id/icon"
            android:text="@string/start_app"
            android:textColor="@color/dialog_txt_title_light"
            android:textSize="@dimen/eighteen_sp"
            android:visibility="gone" />

    </RelativeLayout>

    <!-- content -->

    <LinearLayout
        android:id="@+id/dialog_extra_layout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="@dimen/twelve_dp"
        android:layout_marginLeft="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/twelve_dp"
        android:layout_weight="1.0"
        android:orientation="vertical">

    </LinearLayout>

    <!-- button -->

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thirty_six_dp"
        android:layout_marginBottom="@dimen/eight_dp"
        android:measureWithLargestChild="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/dialog_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thirty_six_dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/dialog_btn_click_select"
            android:gravity="center"
            android:maxLines="2"
            android:minWidth="@dimen/dialog_bottom_btn_txt_minWidth"
            android:paddingLeft="@dimen/sixteen_dp"
            android:paddingRight="@dimen/sixteen_dp"
            android:textColor="@drawable/dialog_btn_selector"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thirty_six_dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dialog_btn_click_select"
            android:gravity="center"
            android:maxLines="2"
            android:minWidth="@dimen/dialog_bottom_btn_txt_minWidth"
            android:paddingLeft="@dimen/sixteen_dp"
            android:paddingRight="@dimen/sixteen_dp"
            android:textColor="@drawable/dialog_btn_selector"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_middle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thirty_six_dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/dialog_right"
            android:layout_toStartOf="@id/dialog_right"
            android:background="@drawable/dialog_btn_click_select"
            android:gravity="center"
            android:maxLines="2"
            android:minWidth="@dimen/dialog_bottom_btn_txt_minWidth"
            android:paddingLeft="@dimen/sixteen_dp"
            android:paddingRight="@dimen/sixteen_dp"
            android:textColor="@drawable/dialog_btn_selector"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

</com.grt.filemanager.view.dialog.DialogLinearLayout>