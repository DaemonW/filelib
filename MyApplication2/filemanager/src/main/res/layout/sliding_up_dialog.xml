<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- title -->

    <RelativeLayout
        android:id="@+id/dialog_title_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/dialog_title_padding_left_right"
            android:paddingRight="@dimen/dialog_title_padding_left_right"
            android:textColor="@color/item_file_info_light"
            android:textSize="16sp"
            android:visibility="gone" />
        <View
            android:id="@+id/title_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#8c8b8b"/>

    </RelativeLayout>


    <!-- content -->

    <LinearLayout
        android:id="@+id/dialog_extra_layout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:orientation="vertical" />

    <!-- button -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8c8b8b"/>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:measureWithLargestChild="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/dialog_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/dlg_pressed_bg_color"
            android:gravity="center"
            android:maxLines="2"
            android:minWidth="@dimen/dialog_bottom_btn_txt_minWidth"
            android:paddingLeft="@dimen/sixteen_dp"
            android:paddingRight="@dimen/sixteen_dp"
            android:textColor="@drawable/dialog_btn_selector"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/dlg_pressed_bg_color"
            android:gravity="center"
            android:maxLines="2"
            android:minWidth="@dimen/dialog_bottom_btn_txt_minWidth"
            android:paddingLeft="@dimen/sixteen_dp"
            android:paddingRight="@dimen/sixteen_dp"
            android:textColor="@drawable/dialog_btn_selector"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_middle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/dialog_right"
            android:layout_toStartOf="@id/dialog_right"
            android:background="@color/dlg_pressed_bg_color"
            android:gravity="center"
            android:maxLines="2"
            android:minWidth="@dimen/dialog_bottom_btn_txt_minWidth"
            android:paddingLeft="@dimen/sixteen_dp"
            android:paddingRight="@dimen/sixteen_dp"
            android:textColor="@drawable/dialog_btn_selector"
            android:textSize="16sp"
            android:visibility="gone" />


    </RelativeLayout>

</LinearLayout>